{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended",
  "globals": {
    "describe": "readonly",
    "it": "readonly",
    "require": "readonly"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "warn",
    "semi-style": ["error", "last"],
    "semi": ["error", "always"]
  }
}
